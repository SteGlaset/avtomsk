        section#about
            h2.h2.h2_dashed
                span.h2_text АвтоМСК В ЦИФРАХ
            .container
                ul.facts__list.text_uppercase
                    li.fact__item.fact__item_1
                        .fact__box.fact__box_rounded
                            p.fact__title 3
